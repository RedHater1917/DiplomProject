<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://equipmentEdit.caption"
        focusComponent="form"
        messagesPack="com.company.equipmentrecords.web.screens.equipment">
    <data>
        <instance id="equipmentDc"
                  class="com.company.equipmentrecords.entity.Equipment">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="equipmentDc">
            <column width="350px">
                <textField id="numberField" property="number"/>
                <textField id="nameField" property="name"/>
                <textField id="descriptionField" property="description"/>
                <textField id="madeByField" property="madeBy"/>
                <textField id="costField" property="cost"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
